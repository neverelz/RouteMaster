<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Добро пожаловать в RouteMaster"
        Button:
            text: "Перейти к бронированию"
            on_press: app.root.current = 'booking'

<BookingScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Экран бронирования"
        Button:
            text: "Назад"
            on_press: app.root.current = 'main'

<TripDetailScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Детальная информация о поездке"
        Button:
            text: "Назад"
            on_press: app.root.current = 'main'
